<html>
    <head>
        <meta charset="utf-8">
        <title>Connexion Visiteur</title>
        <style>
		body{
			background-color:#B4B4FF;
		}
		h3{
			color:white;
			background-color:royalblue;
			width:500px;
			height:40px;
			border-radius: 10px;
			margin-left:auto;
			margin-right:auto;
			line-height:40px;
		}
		.login{
			color:royalblue;
			padding: 10px;
			background-color:white;
		}
		.champs{
			color:white;
			padding: 5px;
			background-color:#B4B4FF;
			width:300px;
		}
		.btn{
			color:white;
			padding: 5px;
			background-color:royalblue;
			width:100px;
			border-radius: 10px;
		}

	</style>
        
	</head>

	<body>
        <br>
	<br>
        <h3><center>Connexion Visiteur</center></h3>
	<br>
	<br>
    	<center>
        {{ form_start(form) }}
        <div class="login">
		<br>
		<b>{{ form_label(form.loginVis, "Login :") }}</b>
		<br><br>
		{{ form_widget(form.loginVis, {'attr': {'placeholder':"Votre identifiant",'class':'champs'}} ) }}
	</div>

	<div class="login">
		<b>{{ form_label(form.mdpVis, "Mot de passe :") }}</b>
		<br><br>
		{{ form_widget(form.mdpVis, {'attr': {'placeholder':"Votre mot de passe",'class':'champs'}}) }}
	</div>
        
	<div class="login">
		<p>{{form_widget(form.login, {'attr': {'class':'btn'}})}}</p>
	</div>
        {{ form_end(form) }}	
	</center>
	</body>
</html>
